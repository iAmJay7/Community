﻿@using Community.Areas.Admin.Models
@using Community.Models
@{
    Layout = "~/Areas/Admin/Views/Shared/_Mm.cshtml";
}
@model IEnumerable<Community.Areas.Admin.Models.MassMrgExpenditureViewModel>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mass Mrg Expenditure</title>
</head>
<body>
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">Mass Marriage Expenditure</header>
                        <div class="panel-body">
                            <div class="form-inline" role="form">
                                <input type="hidden" id="id" value="" />
                                <input type="hidden" id="massMrgId" value="@SessionWrapper.MassMrgId" />
                                
                                <div class="form-group">
                                    <input class="form-control" type="text" id="amount" placeholder="Amount" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="text" id="forDiscription" placeholder="Discription" />
                                </div>
                                <button id="create" onclick="doCreate()" class="btn btn-primary">Create</button>
                                <button id="update" disabled="disabled" onclick="doUpdate()" class="btn btn-dark">Update</button>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            List
                        </header>
                        <table id="table" class="table table-striped table-advance">
                            <tr>
                                <th id="0">Id</th>
                                <th id="2">Amount</th>
                                <th id="3">Discription</th>
                                <th id="4">Date</th>
                            </tr>
                            <tbody id="tbody">
                                @if (Model != null)
                                {
                                    foreach (var a in Model)
                                    {
                                        <tr>
                                            <td>@a.Id</td>
                                            <td>@a.Amount</td>
                                            <td>@a.ForDiscription</td>
                                            <td>@a.Date</td>
                                            <td>
                                                <div id="btns" data-id="@a.Id" data-massMrgId="@a.MassMrgId" data-amount="@a.Amount" data-forDiscription="@a.ForDiscription" data-date="@a.Date" class="btn-group">
                                                    <a id="edit" class="btn btn-success" href="#"><i class="icon_pencil-edit"></i></a>
                                                    <a id="delete" class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>
        function doCreate() {
            var data = {
                "massMrgId": $("#massMrgId").val(),
                "amount": $("#amount").val(),
                "forDiscription": $("#forDiscription").val(),
                "date":new Date().toISOString().slice(0,11).replace('T','')
            };
            console.log(data);
            $.post("/admin/massMrgExpenditure/create", data, function (re) {
                console.log(re);
                createList(re, "#tbody");
            });
        }
        function createList(re, parent) {
            $(parent).empty();
            for (var a in re) {
                var row = $("<tr>");
                var id = $("<td>");
                var amount = $("<td>");
                var discription = $("<td>");
                var date = $("<td>");
                id.text(re[a]["Id"]);
                amount.text(re[a]["Amount"]);
                discription.text(re[a]["ForDiscription"]);
                date.text(re[a]["Date"]);

                id.appendTo(row);
                amount.appendTo(row);
                discription.appendTo(row);
                date.appendTo(row);
                row.appendTo(parent);
            }
        }
        $("#table th").on("click", function () {
            $.post("/admin/MassMrgExpenditure/orderBy", { "orderBy": $(this).attr("id") }, function (re) {
                createList(re, "#tbody");
            });
        })
    </script>
</body>

