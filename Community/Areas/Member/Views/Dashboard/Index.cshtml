@using Community.Models
@using Community.Areas.Admin.Models
@{
    Layout = null;
}
@model Community.Models.PersonInfoViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
    </script>
    <!-- font files -->
    <link href="//fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <!-- /font files -->
    <!-- css files -->
    <link href="~/Content/css/profile.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" type="text/css" media="all" />
    <!-- /css files -->
    </head>
    <body>
        <div class="banner-layer">
            <div class="logo text-center">
                <h1>
                    <a href="index.html">
                        <span class="fa fa-hand-peace-o" aria-hidden="true"></span>@SessionWrapper.UserName
                    </a>
                </h1>
            </div>
            <div class="w3ls-container   text-center">

                <div class="w3l-content">
                    <div class="left-grid">
                        <h2 class="text-w3layouts">@VillageRepository.GetVillaNamegeById((SakhRepository.GetSakhById(Model.SakhId)).VillageId) @SakhRepository.GetSakhById(Model.SakhId).Name</h2>
                        <span class="text-w3layouts">@Model.Gender @Model.Age</span>
                    </div>
                    <div class="right-grid">
                        <p>
                            Education @Model.Education
                            <br>Occupation @Model.Occupation
                            <br>Address @Model.Address
                        </p>
                        <div class="sub-form">
                            <form action="#" method="post">
                                <input type="email" name="email" size="30" required="" placeholder="Email">
                                <button class="btn1">
                                    <span class="fa fa-paper-plane" aria-hidden="true"></span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="agile-social-icons">
                    <p>Family Member</p>
                    <ul class="social_list">
                        <li>
                            <a href="#">
                                <img src="~/Content/images/a.png" alt="" />
                                <p style="margin-top:0px">One</p>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="~/Content/images/c.png" alt="" />
                                <p style="margin-top:0px">Two</p>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="~/Content/images/d.png" alt="" />
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="~/Content/images/e.png" alt="" />
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="footer">
                
            </div>
        </div>
    </body>
</html>